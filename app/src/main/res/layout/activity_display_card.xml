<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="200dp"

        android:focusable="true"
        card_view:cardBackgroundColor="@android:color/darker_gray"
        card_view:cardElevation="15dp"
        card_view:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:text="Name: "
                android:textSize="16sp"
                />


            <TextView
                android:id="@+id/tv_name_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_toRightOf="@+id/tv_name"
                android:gravity="right"
                android:layout_marginTop="20dp"
                android:text="Kumari Sweta "
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_below="@id/tv_name"
                android:layout_marginTop="20dp"
                android:text="Email: "
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/tv_email_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_toRightOf="@+id/tv_email"
                android:layout_below="@+id/tv_name_value"
                android:gravity="right"
                android:layout_marginTop="20dp"
                android:text="ksweta@mail.sfsu.edu"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_below="@id/tv_email"
                android:layout_marginTop="20dp"

                android:text="Mobile: "
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/tv_phone_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_toRightOf="@+id/tv_phone"
                android:layout_below="@+id/tv_email_value"
                android:gravity="right"
                android:layout_marginTop="20dp"
                android:text="510-387-1364"
                android:textSize="16sp"
                />


        </RelativeLayout>
    </android.support.v7.widget.CardView>



</LinearLayout>